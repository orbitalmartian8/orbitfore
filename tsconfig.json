{
    "compilerOptions": {
        "noImplicitAny": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "Bundler",
        "allowJs": true,
        "strictNullChecks": true,
        "lib": ["ES2020", "DOM"],
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
