{
  "type": "module",
  "scripts": {
    "lint": "standard && standard --plugin html 'src/routes/**/*.html' && tsc && prettier -c 'src/**/*.ts'",
    "lint-fix": "standard --fix && standard --fix --plugin html 'src/routes/**/*.html' && prettier -w 'src/**/*.ts'",
    "dev": "run-s build-lodash before-build serve-dev",
    "serve-dev": "run-p --race build-template-html-watch sapper-dev",
    "sapper-dev": "NODE_ENV=development PORT=4002 WEBPACK_CONFIG_FILE=webpack/webpack.config.cjs SERVER_FILE_EXT=cjs node ./node_modules/sapper/sapper dev",
    "before-build": "run-p build-template-html build-assets build-webpack-config",
    "build": "NODE_ENV=production run-s build-steps",
    "build-steps": "run-s build-lodash before-build sapper-export",
    "sapper-build": "WEBPACK_CONFIG_FILE=webpack/webpack.config.cjs SERVER_FILE_EXT=cjs node ./node_modules/sapper/sapper build",
    "start": "node server.js",
    "build-and-start": "run-s build start",
    "build-template-html": "node ./bin/build-template-html.js",
    "build-template-html-watch": "node ./bin/build-template-html.js --watch",
    "build-assets": "node ./bin/build-assets.js",
    "build-lodash": "esbuild ./src/routes/_thirdparty/lodash/timers.src.js --bundle --format=esm --outfile=./src/routes/_thirdparty/lodash/timers.js",
    "build-webpack-config": "node ./webpack/esbuild.config.js",
    "sapper-export": "PORT=22939 WEBPACK_CONFIG_FILE=webpack/webpack.config.cjs SERVER_FILE_EXT=cjs node ./node_modules/sapper/sapper export"
  },
  "dependencies": {
    "@ampproject/remapping": "^2.3.0",
